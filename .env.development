# Development Environment Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration (use a local or test database)
DATABASE_URL=postgresql://localhost:5432/tyton_dev

# Authentication (development secrets)
JWT_SECRET=development-jwt-secret-change-in-production-32chars
JWT_EXPIRY=7d
SESSION_SECRET=development-session-secret-change-in-production

# OpenAI Configuration (add your key here)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Rate Limiting (more relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AI_RATE_LIMIT_MAX_REQUESTS=50

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# CORS (allow all for development)
CORS_ORIGIN=*

# Feature Flags (enabled for development)
ENABLE_MOCK_DATA=true
ENABLE_DEBUG_ROUTES=true